{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es2017",
    "lib": ["dom", "es2017"]
  },
  "exclude": [
    "config",
    "dist",
    "node_modules",
  ]
}
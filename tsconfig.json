{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "*": [
        "node_modules/*",
        "package/types/*"
      ]
    },
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es7", "scripthost"],
    "moduleResolution": "node",
    "locale": "zh-cn",
    "allowJs": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "esModuleInterop": true, // import enable
    "traceResolution": false, // show resolution
    "noImplicitAny": false,
    "resolveJsonModule": true // import json enable
  },
  "exclude": [
    "dist"
  ]
}
{
  "version": "0.2.0",
  "configurations": [{
    // Debugging type: node
    "type": "node",
    // Or attach
    "request": "launch",
    "name": "test debug",
    "runtimeArgs": [
      "--inspect-brk",
      "${workspaceFolder}/node_modules/.bin/jest",
      "--runInBand"
    ],
    // Node program address
    "runtimeExecutable": "/usr/local/bin/node",
    // Terminal toolï¼šVS Code Built-in
    "console": "integratedTerminal",
    "internalConsoleOptions": "openOnSessionStart"
  }]
}